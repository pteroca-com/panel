{
    "name": "pteroca/panel",
    "description": "PteroCA.com is a free, open-source client area and management panel designed specifically for Pterodactyl server users and hosting providers. The platform simplifies and automates server management with a user-friendly interface and robust billing features.",
    "version": "0.3.0",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Konrad Sroga",
            "email": "konradsroga@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "easycorp/easyadmin-bundle": "^4.8",
        "lcobucci/jwt": "^5.3",
        "nyholm/psr7": "^1.8",
        "rajentrivedi/tokenizer-x": "^1.0",
        "stripe/stripe-php": "^15.5",
        "symfony/cache": "^7.0",
        "symfony/console": "^7.0",
        "symfony/dotenv": "^7.0",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "^7.0",
        "symfony/http-client": "^7.0",
        "symfony/http-foundation": "^7.0",
        "symfony/mailer": "^7.0",
        "symfony/messenger": "^7.0",
        "symfony/monolog-bundle": "^3.10",
        "symfony/runtime": "^7.0",
        "symfony/security-bundle": "^7.0",
        "symfony/serializer": "^7.0",
        "symfony/yaml": "^7.0",
        "timdesm/pterodactyl-php-api": "^1.2",
        "vich/uploader-bundle": "^2.4",
        "symfony/maker-bundle": "^1.52"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\Core\\": "src/Core/",
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "php -r \"if (!file_exists('.env')) { copy('.env.SAMPLE', '.env'); }\"",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "php -r \"if (!file_exists('.env')) { copy('.env.SAMPLE', '.env'); }\"",
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^7.0"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^7.0",
        "symfony/css-selector": "^7.0",
        "symfony/phpunit-bridge": "^7.1"
    }
}
