<div class="col-12 configuration-step" data-step="0">
    <form data-step="0">
        <div class="row">
            <div class="col-12 text-center fw-bold mt-0">
                {{ 'pteroca.first_configuration.configurator_welcome'|trans }}
            </div>
            <div class="col-6 offset-3 text-center mt-5">
                <div class="alert alert-info text-center" role="alert">
                    <div>
                        {{ 'pteroca.first_configuration.configurator_welcome_description'|trans }}
                    </div>
                    <div class="mt-4">
                        {{ 'pteroca.first_configuration.configurator_welcome_description_2'|trans }}
                    </div>
                </div>
            </div>
            <div class="col-6 offset-3 text-center mt-5">
                <div class="form-group">
                    <label class="form-control-label required" for="configurator_language">{{ 'pteroca.first_configuration.configurator_language'|trans }}</label>
                    <div class="form-widget">
                        <select id="configurator_language" name="configurator_language" class="form-control" required>
                            {% for languageCode, language in availableLanguages %}
                                <option value="{{ languageCode|lower }}" {% if languageCode|lower == configuratorLanguage|lower %}selected{% endif %}>{{ language }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-6 offset-3 text-center mt-3 mb-3">
                <button type="submit" class="btn btn-primary btn-lg w-100 float-end">{{ 'pteroca.first_configuration.start_configuration'|trans }}</button>
            </div>
        </div>
    </form>
</div>