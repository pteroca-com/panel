{% set defaultThemeColors = get_default_theme_colors() %}
<style>
    html:root {
        {% if defaultThemeColors.theme_default_primary_color %}
        --primary-color: {{ defaultThemeColors.theme_default_primary_color }} !important;
        --secondary-color: color-mix(in srgb, var(--primary-color) 92%, black 8%) !important;
        --link-color: var(--primary-color) !important;
        --link-hover-color: color-mix(in srgb, var(--primary-color) 85%, black 15%) !important;
        --pagination-active-bg: var(--primary-color) !important;
        {% endif %}
        {% if defaultThemeColors.theme_default_background_color %}
        --body-bg: {{ defaultThemeColors.theme_default_background_color }} !important;
        {% endif %}
    }
    html.ea-dark-scheme:root {
        {% if defaultThemeColors.theme_default_dark_primary_color %}
        --primary-color: {{ defaultThemeColors.theme_default_dark_primary_color }} !important;
        --secondary-color: color-mix(in srgb, var(--primary-color) 92%, black 8%) !important;
        --link-color: var(--primary-color) !important;
        --link-hover-color: color-mix(in srgb, var(--primary-color) 85%, white 15%) !important;
        --pagination-active-bg: var(--primary-color) !important;
        {% endif %}
        {% if defaultThemeColors.theme_default_dark_background_color %}
        --body-bg: {{ defaultThemeColors.theme_default_dark_background_color }} !important;
        {% endif %}
    }
</style>
