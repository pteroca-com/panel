{% extends '@EasyAdmin/page/login_minimal.html.twig' %}

{% block body_class 'page-login bg-light' %}
{% block page_title %}{{ get_title() }} | {{ 'pteroca.login.title'|trans }}{% endblock %}

{% block head_stylesheets %}
    {% if get_captcha_site_key() %}
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    {% endif %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ template_asset('css/panel.css?v=' ~ get_app_version()) }}">
{% endblock %}

{% block head_favicon %}
    <link rel="shortcut icon" href="{{ asset(get_favicon()) }}">
{% endblock %}

{% block wrapper_wrapper %}
    {% set page_title = block('page_title') %}
    {% set _username_label = username_label is defined ? username_label|trans : 'login_page.username'|trans({}, 'EasyAdminBundle') %}
    {% set _password_label = password_label is defined ? password_label|trans : 'login_page.password'|trans({}, 'EasyAdminBundle') %}
    {% set _forgot_password_label = forgot_password_label is defined ? forgot_password_label|trans : 'login_page.forgot_password'|trans({}, 'EasyAdminBundle') %}
    {% set _remember_me_label = remember_me_label is defined ? remember_me_label|trans : 'login_page.remember_me'|trans({}, 'EasyAdminBundle') %}
    {% set _sign_in_label = sign_in_label is defined ? sign_in_label|trans : 'login_page.sign_in'|trans({}, 'EasyAdminBundle') %}

    <div class="container-fluid min-vh-100 d-flex align-items-stretch p-0">
        <!-- Brand / Illustration Side -->
        <div class="d-none d-lg-flex flex-column justify-content-between col-lg-6 p-5 text-white"
             style="background: radial-gradient(1200px 600px at -10% -10%, rgba(59,130,246,.35), transparent),
                             radial-gradient(1000px 500px at 110% 110%, rgba(16,185,129,.25), transparent),
                             linear-gradient(135deg, #0b1020 0%, #121a2c 100%);">
            <div>
                <img src="{{ get_logo() }}" alt="{{ get_title() }}" class="img-fluid mb-4" style="max-height: 64px; filter: drop-shadow(0 2px 6px rgba(0,0,0,.3));" />
                <h1 class="display-6 fw-bold mb-3">{{ 'pteroca.login.title'|trans }}</h1>
                <p class="lead text-white-50">{{ 'pteroca.login.subtitle'|trans }}</p>
            </div>
            <ul class="list-unstyled small text-white-50 mb-0">
                <li class="mb-2"><i class="fas fa-shield-alt me-2"></i>{{ 'pteroca.security.secure_auth'|trans|default('Secure authentication') }}</li>
                <li class="mb-2"><i class="fas fa-bolt me-2"></i>{{ 'pteroca.ui.fast_modern'|trans|default('Fast, modern interface') }}</li>
                <li class="mb-2"><i class="fas fa-language me-2"></i>{{ 'pteroca.ui.multilingual'|trans|default('Multilingual ready') }}</li>
            </ul>
        </div>

        <!-- Form Side -->
        <div class="col-12 col-lg-6 d-flex align-items-center justify-content-center p-4 p-md-5 bg-light">
            <div class="w-100" style="max-width: 480px;">
                <div class="card shadow border-0">
                    <div class="card-body p-4 p-md-5">
                        <!-- Title Section -->
                        <div class="text-center mb-4 d-lg-none">
                            <img src="{{ get_logo() }}" alt="{{ get_title() }}" class="img-fluid mb-3" style="max-height: 56px;" />
                            <h2 class="h4 fw-bold text-dark mb-1">{{ 'pteroca.login.title'|trans }}</h2>
                            <p class="text-muted small mb-0">{{ 'pteroca.login.subtitle'|trans }}</p>
                        </div>

                        <!-- Flash Messages -->
                        {% include '@EasyAdmin/flash_messages.html.twig' %}

                        <!-- Error Message -->
                        {% if error|default(false) %}
                            <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <div>
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            </div>
                        {% endif %}

                        <!-- Login Form -->
                        <form method="post" action="{{ action|default('') }}" novalidate>
                            {% if csrf_token_intention|default(false) %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token(csrf_token_intention) }}">
                            {% endif %}

                            <input type="hidden" name="{{ target_path_parameter|default('_target_path') }}" value="/" />

                            <!-- Email Field -->
                            <div class="mb-3">
                                <label for="username" class="form-label fw-semibold">
                                    <i class="fas fa-envelope me-1 text-muted"></i>
                                    {{ 'pteroca.login.email_address'|trans }}
                                </label>
                                <input
                                    type="email"
                                    id="username"
                                    name="{{ username_parameter|default('_username') }}"
                                    class="form-control form-control-lg"
                                    value="{{ last_username|default('') }}"
                                    placeholder="{{ 'pteroca.login.email_placeholder'|trans }}"
                                    required
                                    autofocus
                                    autocomplete="username"
                                >
                            </div>

                            <!-- Password Field -->
                            <div class="mb-2">
                                <label for="password" class="form-label fw-semibold">
                                    <i class="fas fa-lock me-1 text-muted"></i>
                                    {{ 'pteroca.login.password'|trans }}
                                </label>
                                <div class="input-group input-group-lg">
                                    <input
                                        type="password"
                                        id="password"
                                        name="{{ password_parameter|default('_password') }}"
                                        class="form-control form-control-lg"
                                        placeholder="{{ 'pteroca.login.password_placeholder'|trans }}"
                                        required
                                        autocomplete="current-password"
                                    >
                                    <span class="input-group-text" style="cursor: pointer;" onclick="togglePassword()" aria-label="Toggle password visibility">
                                        <i class="fas fa-eye" id="togglePasswordIcon" aria-hidden="true"></i>
                                    </span>
                                </div>
                            </div>

                            <!-- Remember / Forgot -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                {% if remember_me_enabled|default(false) %}
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="remember_me" name="{{ remember_me_parameter|default('_remember_me') }}" {{ remember_me_checked|default(false) ? 'checked' }}>
                                        <label class="form-check-label text-muted small" for="remember_me">{{ 'pteroca.login.remember_me'|trans }}</label>
                                    </div>
                                {% else %}
                                    <span></span>
                                {% endif %}
                                {% if forgot_password_enabled|default(false) %}
                                    <a href="{{ forgot_password_path|default('#') }}" class="text-decoration-none small">{{ 'pteroca.login.forgot_password'|trans }}</a>
                                {% endif %}
                            </div>

                            <!-- reCAPTCHA -->
                            {% if get_captcha_site_key() %}
                                <div class="d-flex justify-content-center mb-3">
                                    <div class="g-recaptcha" data-sitekey="{{ get_captcha_site_key() }}"></div>
                                </div>
                            {% endif %}

                            <!-- Submit Button -->
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg fw-semibold">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    {{ 'pteroca.login.sign_in'|trans }}
                                </button>
                            </div>
                        </form>

                        <!-- Register Link -->
                        <div class="text-center">
                            <p class="text-muted small mb-0">
                                {{ 'pteroca.login.dont_have_account_yet'|trans }}
                                <a href="{{ path('app_register') }}" class="text-decoration-none ms-2">{{ 'pteroca.register.title'|trans|default('Create account') }}</a>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="text-center mt-3">
                    <p class="text-muted small mb-0">
                        Powered by <a href="https://pteroca.com" target="_blank" class="text-decoration-none">PteroCA v{{ get_app_version() }}</a> · &copy; {{ 'now'|date('Y') }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript for password toggle -->
    <script>
        function togglePassword() {
            const passwordField = document.getElementById('password');
            const toggleIcon = document.getElementById('togglePasswordIcon');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>

    <script src="{{ asset('login.js', constant('EasyCorp\\Bundle\\EasyAdminBundle\\Asset\\AssetPackage::PACKAGE_NAME')) }}"></script>
{% endblock %}
