{% extends 'panel/layout/split_screen.html.twig' %}

{% block page_title %}{{ get_title() }} | {{ 'pteroca.register.title'|trans }}{% endblock %}

{% block left_content %}
    <h2 class="login-brand-title">{{ 'pteroca.register.welcome_title'|trans }}</h2>
    <p class="login-brand-subtitle">{{ 'pteroca.register.welcome_description'|trans }}</p>

    <div class="login-features">
        <div class="login-feature-item">
            <i class="fas fa-rocket"></i>
            <span>{{ 'pteroca.register.feature_quick_setup'|trans }}</span>
        </div>
        <div class="login-feature-item">
            <i class="fas fa-users"></i>
            <span>{{ 'pteroca.register.feature_join_community'|trans }}</span>
        </div>
        <div class="login-feature-item">
            <i class="fas fa-check-circle"></i>
            <span>{{ 'pteroca.register.feature_easy_start'|trans }}</span>
        </div>
    </div>
{% endblock %}

{% block form_title %}
    <h1 class="h4 fw-bold text-dark mb-1">{{ 'pteroca.register.title'|trans }}</h1>
{% endblock %}

{% block form_subtitle %}
    <p class="text-muted small mb-0">{{ 'pteroca.register.subtitle'|trans }}</p>
{% endblock %}

{% block form_content %}
    <!-- Error Messages -->
    {% if errors|default([])|length > 0 %}
        <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <div>
                {% for error in errors %}
                    <div>{{ error|trans }}</div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    {{ form_errors(registrationForm) }}

    <!-- Registration Form -->
    {{ form_start(registrationForm) }}

        {# Renderuj wszystkie pola dynamicznie #}
        {% for field in registrationForm %}
            {% if field.vars.name not in ['_token'] %}
                {{ form_row(field) }}
            {% endif %}
        {% endfor %}

        <!-- reCAPTCHA -->
        {% if get_captcha_site_key() %}
            <div class="d-flex justify-content-center mb-3">
                <div class="g-recaptcha" data-sitekey="{{ get_captcha_site_key() }}"></div>
            </div>
        {% endif %}

        <!-- Submit Button -->
        <div class="d-grid mb-3">
            <button type="submit" name="register-submit" class="btn btn-primary btn-lg fw-semibold">
                <i class="fas fa-user-plus me-2"></i>
                {{ 'pteroca.register.submit'|trans }}
            </button>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}

{% block footer_links %}
    <div class="text-center">
        <p class="text-muted small mb-0">
            <a href="{{ path('app_login') }}" class="text-decoration-none">
                {{ 'pteroca.register.already_have_account'|trans }}
            </a>
        </p>
    </div>
{% endblock %}
