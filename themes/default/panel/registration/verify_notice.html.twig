{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}| {{ 'pteroca.verification.title'|trans }}{% endblock %}

{% block content %}
    <div class="mt-4">
        {# Header Section #}
        <div class="row">
            <div class="col-12">
                <div class="dashboard-header rounded-3 p-4 mb-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="bg-warning rounded-circle me-3">
                                <i class="fas fa-envelope-open-text p-3 text-white"></i>
                            </div>
                            <div>
                                <h4 class="mb-1 fw-bold">{{ 'pteroca.verification.title'|trans }}</h4>
                                <p class="text-muted mb-0">{{ 'pteroca.verification.subtitle'|trans }}</p>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <a class="btn btn-outline-secondary" href="{{ path('panel') }}">
                                <i class="fas fa-arrow-left me-2"></i>{{ 'pteroca.verification.back_to_panel'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Main Content Card #}
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8 col-xl-6">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        {# Flash Messages #}
                        {% include '@EasyAdmin/flash_messages.html.twig' %}

                        {# Verification Warning Alert #}
                        <div class="alert alert-warning d-flex align-items-start mb-4" role="alert">
                            <i class="fas fa-exclamation-triangle me-3 mt-1"></i>
                            <div>
                                <strong>{{ 'pteroca.verification.required'|trans }}</strong><br>
                                <small>{{ 'pteroca.verification.description'|trans }}</small>
                            </div>
                        </div>

                        {# User Email Information #}
                        {% if app.user %}
                            <div class="mb-4 p-3 bg-light rounded">
                                <p class="text-muted small mb-2">{{ 'pteroca.verification.sent_to'|trans }}:</p>
                                <p class="fw-semibold text-dark mb-0">
                                    <i class="fas fa-envelope me-2 text-primary"></i>
                                    {{ app.user.email }}
                                </p>
                            </div>
                        {% endif %}

                        {# Action Buttons #}
                        <div class="d-grid gap-3 mb-4">
                            <button type="button" class="btn btn-primary btn-lg" onclick="resendVerification()">
                                <i class="fas fa-paper-plane me-2"></i>
                                {{ 'pteroca.verification.resend'|trans }}
                            </button>
                        </div>

                        {# Help Text #}
                        <div class="text-center mt-4">
                            <p class="text-muted small mb-0">
                                <i class="fas fa-question-circle me-1"></i>
                                {{ 'pteroca.verification.help_text'|trans }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script>
        function resendVerification() {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '{{ path('resend_verification') }}';

            const csrfInput = document.createElement('input');
            csrfInput.type = 'hidden';
            csrfInput.name = '_token';
            csrfInput.value = '{{ csrf_token('resend_verification') }}';
            form.appendChild(csrfInput);

            document.body.appendChild(form);
            form.submit();
        }
    </script>
{% endblock %}
