{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}| {{ 'pteroca.servers.cancel_auto_renewal'|trans }} - {{ server.serverProduct.name }} #{{ server.pterodactylServerIdentifier }}{% endblock %}

{% block content %}
    <div class="container-fluid mt-4">
        <!-- Header Section -->
        <div class="row">
            <div class="col-12">
                <div class="bg-light rounded-3 p-4 mb-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="bg-danger rounded-circle me-3">
                                <i class="fas fa-times p-3 text-white"></i>
                            </div>
                            <div>
                                <h4 class="mb-1 fw-bold">{{ 'pteroca.servers.cancel_auto_renewal'|trans }}</h4>
                                <p class="text-muted mb-0">{{ 'pteroca.servers.cancel_auto_renewal_description'|trans }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Server Details Card -->
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-server me-2"></i>
                            <h5 class="mb-1 fw-bold text-white">{{ server.serverProduct.name }} #{{ server.pterodactylServerIdentifier }}</h5>
                        </div>
                    </div>
                    <div class="card-body p-4">
                    <div class="card-body p-4">
                        <!-- Server Status Alert -->
                        <div class="alert alert-warning border-0 shadow-sm mb-4" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            {{ 'pteroca.servers.cancel_warning_message'|trans }}
                        </div>

                        <!-- Server Information Row -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="list-group list-group-flush">
                                    <div class="list-group-item border-0 px-0 py-2">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 rounded-circle me-3">
                                                <i class="fas fa-calendar-alt p-3 text-primary"></i>
                                            </div>
                                            <div>
                                                <strong>{{ 'pteroca.servers.current_expiration'|trans }}:</strong>
                                                <span class="ms-2 fw-bold text-danger">{{ server.expiresAt|date('Y-m-d H:i') }}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="list-group list-group-flush">
                                    <div class="list-group-item border-0 px-0 py-2">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-info bg-opacity-10 rounded-circle me-3">
                                                <i class="fas fa-sync-alt p-3 text-info"></i>
                                            </div>
                                            <div>
                                                <strong>{{ 'pteroca.servers.auto_renewal_status'|trans }}:</strong>
                                                <span class="ms-2 fw-bold {% if server.autoRenewal %}text-success{% else %}text-danger{% endif %}">
                                                    {% if server.autoRenewal %}
                                                        {{ 'pteroca.servers.enabled'|trans }}
                                                    {% else %}
                                                        {{ 'pteroca.servers.disabled'|trans }}
                                                    {% endif %}
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Confirmation Card -->
                <div class="card border-0 shadow-sm rounded-3">
                    <div class="card-header bg-danger text-white">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <h5 class="mb-1 fw-bold text-white">{{ 'pteroca.servers.confirm_cancel_auto_renewal'|trans }}</h5>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <!-- Important Notice -->
                        <div class="alert alert-danger border-0 rounded-3 mb-4">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-exclamation-triangle text-danger me-3 mt-1"></i>
                                <div>
                                    <h6 class="alert-heading fw-bold mb-2">{{ 'pteroca.servers.important_notice'|trans }}</h6>
                                    <p class="mb-2">{{ 'pteroca.servers.server_will_expire_on'|trans }}: <strong class="text-danger">{{ server.expiresAt|date('Y-m-d H:i') }}</strong></p>
                                    <p class="mb-0">{{ 'pteroca.servers.cancel_warning_message'|trans }}</p>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <a href="{{ path('panel', { routeName: 'servers' }) }}" 
                                   class="btn btn-secondary w-100 d-flex align-items-center justify-content-center btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    <span>{{ 'pteroca.servers.go_back'|trans }}</span>
                                </a>
                            </div>
                            <div class="col-md-6">
                                <form action="{{ path('panel', { routeName: 'cart_cancel_confirm' }) }}" method="post" class="d-inline w-100">
                                    <input type="hidden" name="id" value="{{ server.id }}">
                                    <button type="submit" 
                                            class="btn btn-danger w-100 d-flex align-items-center justify-content-center btn-lg fw-semibold"
                                            onclick="return confirm('{{ 'pteroca.servers.confirm_cancel_message'|trans }}')">
                                        <i class="fas fa-times me-2"></i>
                                        <span>{{ 'pteroca.servers.confirm_cancel'|trans }}</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
