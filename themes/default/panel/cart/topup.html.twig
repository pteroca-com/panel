{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}| {{ 'pteroca.cart_topup.title'|trans }}{% endblock %}

{% block content %}
    <div class="container-fluid mt-4">
        <!-- Header Section -->
        <div class="row">
            <div class="col-12">
                <div class="dashboard-header rounded-3 p-4 mb-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary rounded-circle me-3">
                                <i class="fas fa-wallet p-3 text-white"></i>
                            </div>
                            <div>
                                <h4 class="mb-1 fw-bold">{{ 'pteroca.cart_topup.title'|trans }}</h4>
                                <p class="text-muted mb-0">{{ 'pteroca.cart_topup.description'|trans }}</p>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#useVoucherModal">
                                <i class="fa fa-plus me-2"></i>{{ 'pteroca.cart.use_voucher'|trans }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form action="{{ path('panel', { routeName: 'cart_topup' }) }}" method="post">
            <input type="hidden" name="amount" value="{{ request.amount }}" id="topup-amount">
            <input type="hidden" name="currency" value="{{ request.currency }}">
            <input type="hidden" name="voucher" value="" id="voucher-code" data-voucher-type="payment_discount">
            <input type="hidden" name="gateway" value="{{ availableGateways|first.identifier ?? 'stripe' }}" id="selected-gateway">
            
            <div class="row g-4">
                <!-- Main Content -->
                <div class="col-lg-8">
                    <!-- Top-up Order Card -->
                    <div class="card border-0 shadow-sm rounded-3 mb-4">
                        <div class="card-header">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-wallet me-2"></i>
                                <h5 class="mb-0 fw-semibold">{{ 'pteroca.cart_topup.order'|trans }}</h5>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div>
                                    <i class="fas fa-coins text-success me-3" style="font-size: 2.5rem;"></i>
                                </div>
                                <div>
                                    <small class="text-muted">{{ 'pteroca.cart_topup.order_description'|trans }}</small>
                                    <div class="fw-bold fs-4 text-success">
                                        {{ request.amount|number_format(2, '.', '') }} {{ get_currency() }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Method Card -->
                    <div class="card border-0 shadow-sm rounded-3">
                        <div class="card-header">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-credit-card me-2"></i>
                                <h5 class="mb-0 fw-semibold">{{ 'pteroca.cart_topup.payment_method'|trans }}</h5>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            {% if availableGateways is empty %}
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    {{ 'pteroca.payment.no_gateways_available'|trans }}
                                </div>
                            {% else %}
                                <div class="row g-3">
                                    {% for gateway in availableGateways %}
                                        <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                                            <input type="radio"
                                                   name="payment_provider"
                                                   id="gateway_{{ gateway.identifier }}"
                                                   value="{{ gateway.identifier }}"
                                                   class="card-input-element d-none"
                                                   {% if loop.first %}checked{% endif %}>
                                            <label for="gateway_{{ gateway.identifier }}" class="card border-2 shadow-sm rounded-3 card-input h-100">
                                                <div class="card-body text-center p-4">
                                                    <i class="{{ gateway.icon }} mb-3" style="font-size: 2.5rem; {% if gateway.metadata.color is defined %}color: {{ gateway.metadata.color }};{% endif %}"></i>
                                                    <h6 class="card-title mb-0 fw-semibold">{{ gateway.displayName }}</h6>
                                                    {% if gateway.description %}
                                                        <small class="text-muted d-block mt-1">{{ gateway.description }}</small>
                                                    {% endif %}
                                                </div>
                                            </label>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm rounded-3 sticky-top" style="top: 20px;">
                        <div class="card-header bg-success text-white">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-receipt me-2"></i>
                                <h5 class="mb-0 fw-semibold">{{ 'pteroca.cart_configuration.order_summary'|trans }}</h5>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <!-- Top-up Amount -->
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>{{ 'pteroca.cart_topup.order_description'|trans }}</strong>
                                        <div class="small text-muted">{{ request.amount|number_format(2, '.', '') }} {{ get_currency() }}</div>
                                    </div>
                                    <div class="text-end">
                                        <span class="fw-semibold">{{ request.amount|number_format(2, '.', '') }} {{ request.currency|upper }}</span>
                                    </div>
                                </div>
                            </div>
                            
                            <hr class="my-3">
                            
                            <!-- Payment Method -->
                            <div class="mb-3" id="payment-method-section">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <small>{{ 'pteroca.cart_topup.payment_method'|trans }}:</small>
                                        <div id="selected-payment-method" class="fw-semibold">
                                            {% if availableGateways is not empty %}
                                                {{ availableGateways|first.displayName }}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Discount Section -->
                            <div class="mb-3 d-none" id="applied-discount">
                                <hr class="my-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <small class="text-success">{{ 'pteroca.product.discount'|trans }}</small>
                                        <div class="small text-muted">
                                            <span id="applied-discount-code"></span> (-<span id="applied-discount-value"></span>%)
                                            <i class="fa fa-question-circle-o ms-1" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ 'pteroca.product.discount_hint'|trans }}"></i>
                                            <i class="fa fa-close ms-1 hover-pointer text-danger" id="applied-discount-remove"></i>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="text-success">-<span id="applied-discount-amount"></span> {{ request.currency|upper }}</span>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-3">

                            <!-- Total -->
                            <div class="mb-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">{{ 'pteroca.product.total'|trans }}:</span>
                                    <span id="selected-summary" class="fw-bold text-primary fs-4">
                                        {{ request.amount|number_format(2, '.', '') }} {{ request.currency|upper }}
                                    </span>
                                </div>
                            </div>

                            <!-- Order Button -->
                            <div class="d-grid">
                                <button type="submit" id="order-submit" class="btn btn-success btn-lg rounded-pill fw-semibold">
                                    <i class="fa fa-shopping-basket me-2"></i>
                                    {{ 'pteroca.product.order_now'|trans }}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    {% include 'components/use_voucher_modal.html.twig' %}
    {% include 'panel/cart/components/apply_discount.html.twig' %}
{% endblock %}

{% block body_javascript %}
    <script>
        const currentUserBalance = parseFloat('{{ app.user.balance }}');

        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('applied-discount-remove').addEventListener('click', removeDiscountCode);

            // Add event listeners for payment method selection
            const paymentRadios = document.querySelectorAll('input[name="payment_provider"]');
            paymentRadios.forEach(radio => {
                radio.addEventListener('change', updateSelectedPaymentMethod);
            });

            // Disable order button if no payment gateways available
            const orderButton = document.getElementById('order-submit');
            if (paymentRadios.length === 0 && orderButton) {
                orderButton.disabled = true;
                orderButton.classList.add('disabled');
            }

            calculatePrice();
            updateSelectedPaymentMethod();
        })

        function calculatePrice() {
            const appliedDiscountValue = document.querySelector('#applied-discount-value')
            let summaryPrice = parseFloat(document.querySelector('#topup-amount').value);

            if (appliedDiscountValue && appliedDiscountValue.innerText) {
                const discountValue = parseFloat(appliedDiscountValue.innerText);
                if (!isNaN(discountValue)) {
                    let discountPrice = summaryPrice * (discountValue / 100);
                    document.querySelector('#applied-discount-amount').textContent = discountPrice.toFixed(2);
                    summaryPrice -= discountPrice
                }
            }

            document.querySelector('#selected-summary').textContent = `${summaryPrice.toFixed(2)} {{ request.currency|upper }}`
        }

        function updateSelectedPaymentMethod() {
            const selectedRadio = document.querySelector('input[name="payment_provider"]:checked');
            if (selectedRadio) {
                const label = document.querySelector(`label[for="${selectedRadio.id}"]`);
                const methodName = label.querySelector('.card-title').textContent;
                document.querySelector('#selected-payment-method').textContent = methodName;
                // Update hidden gateway field
                document.querySelector('#selected-gateway').value = selectedRadio.value;
            }
        }
    </script>
{% endblock %}
