<div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
    {% if product.imagePath %}
        <div class="position-relative overflow-hidden">
            <img src="{{ product.imagePath }}" class="card-img-top" alt="{{ product.name }}" style="height: 200px; object-fit: cover; transition: transform 0.3s ease;">
        </div>
    {% else %}
        <div class="card-img-top" style="height: 200px; background: linear-gradient(135deg, var(--stripe-gray-100) 0%, var(--stripe-gray-50) 100%); display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-box" style="font-size: 3rem; color: var(--stripe-gray-400);"></i>
        </div>
    {% endif %}
    <div class="card-body d-flex flex-column p-4">
        <h5 class="card-title mb-3 fw-bold" style="color: var(--stripe-gray-900);">{{ product.name }}</h5>
        <p class="card-text mb-4 flex-grow-1 text-muted">{{ product.description }}</p>
        <div class="d-grid">
            <a href="{{ path('panel', { routeName: 'store_product', id: product.id }) }}" class="btn btn-primary">
                <i class="fas fa-shopping-bag me-2"></i>
                {{ 'pteroca.store.order'|trans }}
            </a>
        </div>
    </div>
</div>
