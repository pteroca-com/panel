<div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
    {% if category.imagePath %}
        <div class="position-relative overflow-hidden">
            <a href="{{ path('panel', { routeName: 'store_category', id: category.id }) }}" class="text-decoration-none">
                <img src="{{ category.imagePath }}" class="card-img-top" alt="{{ category.name }}" style="height: 200px; object-fit: cover; transition: transform 0.3s ease;">
            </a>
        </div>
    {% else %}
        <div class="card-img-top" style="height: 200px; background: linear-gradient(135deg, var(--stripe-blue-100) 0%, var(--stripe-blue-50) 100%); display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-folder" style="font-size: 3rem; color: var(--stripe-blue-600);"></i>
        </div>
    {% endif %}
    <div class="card-body d-flex flex-column p-4">
        <h5 class="card-title mb-3 fw-bold" style="color: var(--stripe-gray-900);">{{ category.name }}</h5>
        <p class="card-text mb-4 flex-grow-1 text-muted">{{ category.description }}</p>
        <div class="d-grid">
            <a href="{{ path('panel', { routeName: 'store_category', id: category.id }) }}" class="btn btn-primary">
                <i class="fas fa-arrow-right me-2"></i>
                {{ 'pteroca.store.show_offer'|trans }}
            </a>
        </div>
    </div>
</div>
