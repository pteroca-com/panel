{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}| {{ 'pteroca.store.title'|trans }} - {{ category.name }}{% endblock %}

{% block content %}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="dashboard-header rounded-3 p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary rounded-circle me-3">
                                <i class="fas fa-folder p-3 text-white"></i>
                            </div>
                            <div>
                                <h4 class="mb-1 fw-bold">{{ category.name }}</h4>
                                <p class="text-muted mb-0">{{ 'pteroca.store.category_description'|trans }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if products|length > 0 %}
            <div class="row mb-3">
                <div class="col-12">
                    <h5 class="mb-0 fw-semibold" style="color: var(--stripe-gray-900);">
                        <i class="fas fa-box me-2" style="color: var(--stripe-gray-600);"></i>
                        {{ 'pteroca.store.available_products'|trans }} ({{ products|length }})
                    </h5>
                </div>
            </div>
            <div class="row g-4">
                {% for product in products %}
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        {% include 'panel/store/components/product.html.twig' with { 'product': product } %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="row">
                <div class="col-12">
                    <div class="text-center py-5">
                        <div class="bg-light rounded-circle mx-auto mb-4" style="width: 120px; height: 120px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-box-open text-muted" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="fw-bold text-dark mb-3">{{ 'pteroca.store.no_products_title'|trans }}</h4>
                        <p class="text-muted mb-4">{{ 'pteroca.store.no_products'|trans }}</p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
