{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}| {{ 'pteroca.store.title'|trans }}{% endblock %}

{% block content %}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="dashboard-header rounded-3 p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary rounded-circle me-3">
                                <i class="fas fa-store p-3 text-white"></i>
                            </div>
                            <div>
                                <h4 class="mb-1 fw-bold">{{ 'pteroca.store.title'|trans }}</h4>
                                <p class="text-muted mb-0">{{ 'pteroca.store.description'|trans }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if products|length > 0 %}
            <div class="row mb-3">
                <div class="col-12">
                    <h5 class="mb-0 fw-semibold" style="color: var(--stripe-gray-900);">
                        <i class="fas fa-box me-2" style="color: var(--stripe-gray-600);"></i>
                        {{ 'pteroca.store.products_with_no_category'|trans }}
                    </h5>
                </div>
            </div>
            <div class="row g-4 mb-5">
                {% for product in products %}
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        {% include 'panel/store/components/product.html.twig' with { 'product': product } %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% if categories|length > 0 %}
            <div class="row mb-3">
                <div class="col-12">
                    <h5 class="mb-0 fw-semibold" style="color: var(--stripe-gray-900);">
                        <i class="fas fa-folder me-2" style="color: var(--stripe-gray-600);"></i>
                        {{ 'pteroca.store.categories'|trans }}
                    </h5>
                </div>
            </div>
            <div class="row g-4">
                {% for category in categories %}
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        {% include 'panel/store/components/category.html.twig' with { 'category': category } %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% if categories|length == 0 and products|length == 0 %}
            <div class="row">
                <div class="col-12">
                    <div class="text-center py-5">
                        <div class="bg-light rounded-circle mx-auto mb-4" style="width: 120px; height: 120px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-store text-muted" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="fw-bold text-dark mb-3">{{ 'pteroca.store.shop_is_empty'|trans }}</h4>
                        <p class="text-muted mb-4">{{ 'pteroca.store.no_categories'|trans }}</p>
                        <div class="alert alert-info border-0 shadow-sm" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            {{ 'pteroca.store.no_products_and_categories'|trans }}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
