<div class="card border-0 shadow-sm rounded-3 sticky-top" style="top: 20px;">
    <div class="card-header bg-success text-white">
        <div class="d-flex align-items-center">
            <i class="fas fa-info-circle me-2"></i>
            <h5 class="mb-0 fw-semibold">{{ 'pteroca.recharge.additional_information'|trans }}</h5>
        </div>
    </div>
    <div class="card-body p-4">
        <!-- Current Balance -->
        <div class="mb-4">
            <div class="d-flex align-items-center mb-3">
                <div>
                    <i class="fas fa-wallet me-3 text-primary" style="font-size: 2rem;"></i>
                </div>
                <div>
                    <h6 class="mb-1 fw-semibold">{{ 'pteroca.recharge.current_balance'|trans }}</h6>
                    <span class="fs-4 fw-bold text-primary">{{ app.user.balance|number_format(2, ',', ' ')}} {{ get_currency() }}</span>
                </div>
            </div>
        </div>

        <hr class="my-3">

        <!-- Payment Provider Information -->
        <div class="mb-3">
            <div class="d-flex align-items-center mb-3">
                <div>
                    <i class="fas fa-credit-card me-3 text-info" style="font-size: 2rem;"></i>
                </div>
                <div>
                    <h6 class="mb-1 fw-semibold">{{ 'pteroca.recharge.payment_provider_information'|trans }}</h6>
                </div>
            </div>
            <div class="alert alert-info border-0 shadow-sm" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                {{ 'pteroca.recharge.payment_provider_details'|trans }}
            </div>
        </div>
    </div>
</div>
