{% extends '@EasyAdmin/page/login_minimal.html.twig' %}

{% block body_class 'page-login' %}
{% block page_title %}{{ get_title() }} | {{ 'pteroca.recovery.change_password'|trans }}{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ template_asset('css/panel.css?v=' ~ get_app_version()) }}">
{% endblock %}

{% block head_favicon %}
    <link rel="shortcut icon" href="{{ asset(get_favicon()) }}">
{% endblock %}

{% block wrapper_wrapper %}
    {% set page_title = block('page_title') %}

    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
        <div class="col-11 col-sm-8 col-md-6 col-lg-4 col-xl-3">
            <!-- Logo Section -->
            <div class="text-center mb-4">
                <div class="rounded-3 p-3 d-inline-block shadow-sm" style="background-color: rgb(93, 137, 186);">
                    <img src="{{ get_logo() }}" alt="{{ get_title() }}" class="img-fluid" style="max-height: 80px;" />
                </div>
            </div>

            <div class="card shadow-lg border rounded-3">
                <div class="card-body p-5">
                    <!-- Title Section -->
                    <div class="text-center mb-4">
                        <h1 class="h4 fw-bold text-dark mb-1">{{ 'pteroca.recovery.change_password'|trans }}</h1>
                        <p class="text-muted small mb-0">{{ 'pteroca.recovery.change_password_subtitle'|trans }}</p>
                    </div>

                    <!-- Flash Messages -->
                    {% include '@EasyAdmin/flash_messages.html.twig' %}

                    <!-- Error Message -->
                    {% if error|default(false) %}
                        <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        </div>
                    {% endif %}

                    {{ form_errors(resetForm) }}

                    <!-- Reset Password Form -->
                    {{ form_start(resetForm) }}

                        {{ form_row(resetForm.newPassword) }}
                        {{ form_row(resetForm.confirmPassword) }}

                        <!-- Submit Button -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg fw-semibold">
                                <i class="fas fa-key me-2"></i>
                                {{ 'pteroca.recovery.change_password'|trans }}
                            </button>
                        </div>
                    {{ form_end(resetForm) }}

                    <!-- Back to Login Link -->
                    <div class="text-center">
                        <p class="text-muted small mb-0">
                            <a href="{{ path('app_login') }}" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>
                                {{ 'pteroca.recovery.back_to_login'|trans }}
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="text-center mt-3">
                <p class="text-muted small mb-0">
                    Powered by
                    <a href="https://pteroca.com" target="_blank" class="text-muted text-decoration-none">
                        PteroCA v{{ get_app_version() }}
                    </a>
                    &copy; {{ 'now'|date('Y') }}
                </p>
            </div>
        </div>
    </div>

    <!-- JavaScript for password toggle -->
    <script>
        function togglePasswordField(element) {
            const passwordField = element.previousElementSibling;
            const icon = element.querySelector('i');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
{% endblock %}
