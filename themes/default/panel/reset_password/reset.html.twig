{% extends 'panel/layout/split_screen.html.twig' %}

{% block page_title %}{{ get_title() }} | {{ 'pteroca.recovery.change_password'|trans }}{% endblock %}

{% block left_content %}
    <h2 class="login-brand-title">{{ 'pteroca.recovery.reset_title'|trans }}</h2>
    <p class="login-brand-subtitle">{{ 'pteroca.recovery.reset_description'|trans }}</p>

    <div class="login-features">
        <div class="login-feature-item">
            <i class="fas fa-lock"></i>
            <span>{{ 'pteroca.recovery.feature_secure_reset'|trans }}</span>
        </div>
        <div class="login-feature-item">
            <i class="fas fa-key"></i>
            <span>{{ 'pteroca.recovery.feature_new_password'|trans }}</span>
        </div>
        <div class="login-feature-item">
            <i class="fas fa-check-circle"></i>
            <span>{{ 'pteroca.recovery.feature_instant_access'|trans }}</span>
        </div>
    </div>
{% endblock %}

{% block form_title %}
    <h1 class="h4 fw-bold text-dark mb-1">{{ 'pteroca.recovery.change_password'|trans }}</h1>
{% endblock %}

{% block form_subtitle %}
    <p class="text-muted small mb-0">{{ 'pteroca.recovery.change_password_subtitle'|trans }}</p>
{% endblock %}

{% block form_content %}
    <!-- Error Message -->
    {% if error|default(false) %}
        <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <div>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </div>
    {% endif %}

    {{ form_errors(resetForm) }}

    <!-- Reset Password Form -->
    {{ form_start(resetForm) }}

        {{ form_row(resetForm.newPassword) }}
        {{ form_row(resetForm.confirmPassword) }}

        <!-- Submit Button -->
        <div class="d-grid mb-3">
            <button type="submit" class="btn btn-primary btn-lg fw-semibold">
                <i class="fas fa-key me-2"></i>
                {{ 'pteroca.recovery.change_password'|trans }}
            </button>
        </div>
    {{ form_end(resetForm) }}
{% endblock %}

{% block footer_links %}
    <div class="text-center">
        <p class="text-muted small mb-0">
            <a href="{{ path('app_login') }}" class="text-decoration-none">
                <i class="fas fa-arrow-left me-1"></i>
                {{ 'pteroca.recovery.back_to_login'|trans }}
            </a>
        </p>
    </div>
{% endblock %}
