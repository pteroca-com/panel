{% extends 'panel/layout/split_screen.html.twig' %}

{% block page_title %}{{ get_title() }} | {{ 'pteroca.recovery.title'|trans }}{% endblock %}

{% block left_content %}
    <h2 class="login-brand-title">{{ 'pteroca.recovery.request_title'|trans }}</h2>
    <p class="login-brand-subtitle">{{ 'pteroca.recovery.request_description'|trans }}</p>

    <div class="login-features">
        <div class="login-feature-item">
            <i class="fas fa-envelope"></i>
            <span>{{ 'pteroca.recovery.feature_email_link'|trans }}</span>
        </div>
        <div class="login-feature-item">
            <i class="fas fa-clock"></i>
            <span>{{ 'pteroca.recovery.feature_quick_process'|trans }}</span>
        </div>
        <div class="login-feature-item">
            <i class="fas fa-shield-alt"></i>
            <span>{{ 'pteroca.recovery.feature_secure'|trans }}</span>
        </div>
    </div>
{% endblock %}

{% block form_title %}
    <h1 class="h4 fw-bold text-dark mb-1">{{ 'pteroca.recovery.title'|trans }}</h1>
{% endblock %}

{% block form_subtitle %}
    <p class="text-muted small mb-0">{{ 'pteroca.recovery.request_subtitle'|trans }}</p>
{% endblock %}

{% block form_content %}
    <!-- Error Message -->
    {% if error|default(false) %}
        <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <div>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </div>
    {% endif %}

    {{ form_errors(requestForm) }}

    <!-- Password Reset Request Form -->
    {{ form_start(requestForm) }}

        {{ form_row(requestForm.email) }}

        <!-- Submit Button -->
        <div class="d-grid mb-3">
            <button type="submit" class="btn btn-primary btn-lg fw-semibold">
                <i class="fas fa-paper-plane me-2"></i>
                {{ 'pteroca.recovery.submit'|trans }}
            </button>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}

{% block footer_links %}
    <div class="text-center">
        <p class="text-muted small mb-0">
            <a href="{{ path('app_login') }}" class="text-decoration-none">
                <i class="fas fa-arrow-left me-1"></i>
                {{ 'pteroca.recovery.back_to_login'|trans }}
            </a>
        </p>
    </div>
{% endblock %}
