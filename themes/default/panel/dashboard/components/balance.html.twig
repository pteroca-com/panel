<div class="card border-0 shadow-sm rounded-3 h-100">
    <div class="card-header">
        <div class="d-flex align-items-center">
            <i class="fas fa-wallet me-2"></i>
            <h5 class="mb-0 fw-semibold">{{ 'pteroca.dashboard.account_balance'|trans }}</h5>
        </div>
    </div>
    <div class="card-body p-4">
        <!-- Balance Display -->
        <div class="mb-4">
            <div class="mb-2">
                <small class="text-muted text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;">{{ 'pteroca.dashboard.account_balance_description'|trans }}</small>
            </div>
            <h2 class="fw-bold mb-0" style="color: var(--stripe-gray-900); font-size: 2rem;">{{ app.user.balance|number_format(2, ',', ' ')}} {{ get_currency() }}</h2>
        </div>

        <!-- Action Button -->
        <div class="d-grid">
            <a href="{{ path('panel', { routeName: 'recharge_balance' }) }}" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                {{ 'pteroca.dashboard.account_recharge'|trans }}
            </a>
        </div>
    </div>
</div>
