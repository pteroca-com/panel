{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}
    | {{ 'pteroca.dashboard.title'|trans }}
{% endblock %}

{% block content %}
    <div class="container-fluid mt-4">
        <!-- Header Section -->
        <div class="row">
            <div class="col-12">
                <div class="dashboard-header rounded-3 p-4 mb-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary rounded-circle me-3">
                            <i class="fas fa-tachometer-alt p-3 text-white"></i>
                        </div>
                        <div>
                            <h4 class="mb-1 fw-bold">{{ 'pteroca.dashboard.title'|trans }}</h4>
                            <p class="text-muted mb-0">{{ 'pteroca.dashboard.welcome_message'|trans }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# TOP widgets - Full width section #}
        {% set topWidgets = widgetRegistry.getWidgetsByPosition(constant('App\\Core\\Enum\\WidgetPosition::TOP')) %}
        {% if topWidgets|length > 0 %}
            <div class="row g-4">
                {% for widget in topWidgets %}
                    {% if widget.isVisible(app.user) %}
                        <div class="col-12">
                            {% include widget.getTemplate() with widget.getData(app.user) only %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        {# FULL_WIDTH widgets - Spanning entire row #}
        {% set fullWidgets = widgetRegistry.getWidgetsByPosition(constant('App\\Core\\Enum\\WidgetPosition::FULL_WIDTH')) %}
        {% if fullWidgets|length > 0 %}
            <div class="row g-4 mt-2">
                {% for widget in fullWidgets %}
                    {% if widget.isVisible(app.user) %}
                        <div class="col-12">
                            {% include widget.getTemplate() with widget.getData(app.user) only %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        {# LEFT + RIGHT widgets - Main content area #}
        <div class="row g-4 mt-2">
            {# LEFT widgets - Main content (8 columns) #}
            {% set leftWidgets = widgetRegistry.getWidgetsByPosition(constant('App\\Core\\Enum\\WidgetPosition::LEFT')) %}
            {% if leftWidgets|length > 0 %}
                <div class="col-12 col-xl-8">
                    {% for widget in leftWidgets %}
                        {% if widget.isVisible(app.user) %}
                            <div class="mb-4">
                                {% include widget.getTemplate() with widget.getData(app.user) only %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}

            {# RIGHT widgets - Sidebar (4 columns) #}
            {% set rightWidgets = widgetRegistry.getWidgetsByPosition(constant('App\\Core\\Enum\\WidgetPosition::RIGHT')) %}
            {% if rightWidgets|length > 0 %}
                <div class="col-12 col-xl-4">
                    {% for widget in rightWidgets %}
                        {% if widget.isVisible(app.user) %}
                            <div class="mb-4">
                                {% include widget.getTemplate() with widget.getData(app.user) only %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        {# BOTTOM widgets - Full width section at bottom #}
        {% set bottomWidgets = widgetRegistry.getWidgetsByPosition(constant('App\\Core\\Enum\\WidgetPosition::BOTTOM')) %}
        {% if bottomWidgets|length > 0 %}
            <div class="row g-4 mt-2">
                {% for widget in bottomWidgets %}
                    {% if widget.isVisible(app.user) %}
                        <div class="col-12">
                            {% include widget.getTemplate() with widget.getData(app.user) only %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
