<div class="card border-0 shadow-sm rounded-3 h-100">
    <div class="card-header border-0 p-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-heartbeat me-2 text-success"></i>
            <h5 class="mb-0 fw-semibold">{{ 'pteroca.widget.plugin_health.title'|trans }}</h5>
        </div>
    </div>
    <div class="card-body p-4">
        {% if healthy_count + unhealthy_count == 0 %}
            <div class="text-center py-3">
                <i class="fas fa-info-circle text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3 mb-0">{{ 'pteroca.widget.plugin_health.no_plugins'|trans }}</p>
            </div>
        {% else %}
            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-semibold text-muted">{{ 'pteroca.widget.plugin_health.healthy'|trans }}:</span>
                    <span class="text-success fw-semibold">
                        <i class="fa-solid fa-check me-1"></i>{{ healthy_count }}
                    </span>
                </div>
            </div>
            <hr class="my-3">
            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-semibold text-muted">{{ 'pteroca.widget.plugin_health.unhealthy'|trans }}:</span>
                    <span class="{{ unhealthy_count > 0 ? 'text-danger' : 'text-muted' }} fw-semibold">
                        <i class="fa-solid {{ unhealthy_count > 0 ? 'fa-exclamation-triangle' : 'fa-check' }} me-1"></i>{{ unhealthy_count }}
                    </span>
                </div>
            </div>
            {% if unhealthy_plugins is not empty %}
                <hr class="my-3">
                <div class="mb-0">
                    <span class="fw-semibold text-muted d-block mb-2">{{ 'pteroca.widget.plugin_health.unhealthy_plugins'|trans }}:</span>
                    <div class="small">
                        {% for plugin in unhealthy_plugins %}
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-truncate me-2">{{ plugin.name }}</span>
                                <div class="text-end">
                                    <span class="badge bg-{{ plugin.health_percentage >= 75 ? 'warning' : 'danger' }}">
                                        {{ plugin.health_percentage }}%
                                    </span>
                                    <small class="text-muted d-block" style="font-size: 0.7rem;">
                                        {{ plugin.failed_checks }} {{ 'pteroca.widget.plugin_health.failed_checks'|trans }}
                                    </small>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            {% if last_checked %}
                <hr class="my-3">
                <div class="mb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-semibold text-muted">{{ 'pteroca.widget.plugin_health.last_checked'|trans }}:</span>
                        <span class="small text-muted">{{ last_checked }}</span>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    </div>
</div>
