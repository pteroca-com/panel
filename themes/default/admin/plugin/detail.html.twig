{% extends '@EasyAdmin/layout.html.twig' %}

{% block content_header_wrapper %}
    <div class="dashboard-header rounded-3 p-4 mb-4 mt-4">
        <div class="container-fluid">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <div class="bg-primary rounded-circle me-3">
                        <i class="fas fa-puzzle-piece p-3 text-white"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold">{{ plugin.displayName }}</h4>
                        <p class="text-muted mb-0">{{ 'pteroca.crud.plugin.plugin_details'|trans }}</p>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    {# Back to list button #}
                    <a href="{{ ea_url({ crudAction: 'index', crudControllerFqcn: 'App\\Core\\Controller\\Panel\\Setting\\PluginCrudController' }) }}"
                       class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> {{ 'pteroca.crud.plugin.back_to_list'|trans }}
                    </a>

                    {# Show Settings button - for plugins that have been enabled at least once (have DB entry) #}
                    {% if plugin.id is not null %}
                        <a href="{{ ea_url({ crudControllerFqcn: 'App\\Core\\Controller\\Panel\\Setting\\PluginSettingCrudController', crudAction: 'index', pluginName: plugin.name }) }}"
                           class="btn btn-secondary">
                            <i class="fa fa-cog"></i> {{ 'pteroca.crud.plugin.settings'|trans }}
                        </a>
                    {% endif %}

                    {# Enable button #}
                    {% if plugin.state.value == 'discovered' or plugin.state.value == 'disabled' %}
                        <a href="{{ ea_url({ crudAction: 'enablePlugin', crudControllerFqcn: 'App\\Core\\Controller\\Panel\\Setting\\PluginCrudController', pluginName: plugin.name }) }}"
                           class="btn btn-success">
                            <i class="fa fa-check"></i> {{ 'pteroca.crud.plugin.enable'|trans }}
                        </a>
                    {% endif %}

                    {# Disable button #}
                    {% if plugin.state.value == 'enabled' %}
                        <a href="{{ ea_url({ crudAction: 'disablePlugin', crudControllerFqcn: 'App\\Core\\Controller\\Panel\\Setting\\PluginCrudController', pluginName: plugin.name }) }}"
                           class="btn btn-warning">
                            <i class="fa fa-times"></i> {{ 'pteroca.crud.plugin.disable'|trans }}
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3">{{ 'pteroca.crud.plugin.basic_information'|trans }}</h5>
                    <table class="table table-borderless">
                        <tbody>
                        <tr>
                            <th style="width: 40%;">{{ 'pteroca.crud.plugin.name_label'|trans }}</th>
                            <td><code>{{ plugin.name }}</code></td>
                        </tr>
                        <tr>
                            <th>{{ 'pteroca.crud.plugin.display_name_label'|trans }}</th>
                            <td>{{ plugin.displayName }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'pteroca.crud.plugin.version_label'|trans }}</th>
                            <td><span class="badge bg-info">{{ plugin.version }}</span></td>
                        </tr>
                        <tr>
                            <th>{{ 'pteroca.crud.plugin.author_label'|trans }}</th>
                            <td>{{ plugin.author }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'pteroca.crud.plugin.description_label'|trans }}</th>
                            <td>{{ plugin.description|default('pteroca.crud.plugin.no_description_provided'|trans) }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'pteroca.crud.plugin.state_label'|trans }}</th>
                            <td>
                                <span class="badge bg-{{ plugin.state.badgeClass }}">
                                    {{ plugin.state.label|trans }}
                                </span>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-md-6">
                    <h5 class="mb-3">{{ 'pteroca.crud.plugin.technical_details'|trans }}</h5>
                    <table class="table table-borderless">
                        <tbody>
                        <tr>
                            <th style="width: 40%;">{{ 'pteroca.crud.plugin.capabilities_label'|trans }}</th>
                            <td>
                                {% if plugin.capabilities|length > 0 %}
                                    {% for capability in plugin.capabilities %}
                                        <span class="badge bg-secondary mb-2">{{ capability }}</span>
                                    {% endfor %}
                                {% else %}
                                    <em>{{ 'pteroca.crud.plugin.none'|trans }}</em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>{{ 'pteroca.crud.plugin.min_pteroca_version_label'|trans }}</th>
                            <td>{{ plugin.pterocaMinVersion|default('pteroca.crud.plugin.not_specified'|trans) }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'pteroca.crud.plugin.max_pteroca_version_label'|trans }}</th>
                            <td>{{ plugin.pterocaMaxVersion|default('pteroca.crud.plugin.not_specified'|trans) }}</td>
                        </tr>
                        {% if plugin.enabledAt %}
                            <tr>
                                <th>{{ 'pteroca.crud.plugin.enabled_at_label'|trans }}</th>
                                <td>{{ plugin.enabledAt|date('Y-m-d H:i:s') }}</td>
                            </tr>
                        {% endif %}
                        {% if plugin.disabledAt %}
                            <tr>
                                <th>{{ 'pteroca.crud.plugin.disabled_at_label'|trans }}</th>
                                <td>{{ plugin.disabledAt|date('Y-m-d H:i:s') }}</td>
                            </tr>
                        {% endif %}
                        {% if plugin.faultReason %}
                            <tr>
                                <th>{{ 'pteroca.crud.plugin.fault_reason_label'|trans }}</th>
                                <td class="text-danger">{{ plugin.faultReason }}</td>
                            </tr>
                        {% endif %}
                        {% if plugin.createdAt %}
                            <tr>
                                <th>{{ 'pteroca.crud.plugin.created_at_label'|trans }}</th>
                                <td>{{ plugin.createdAt|date('Y-m-d H:i:s') }}</td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>

            {% if plugin.state.value == 'faulted' and plugin.faultReason %}
                <div class="alert alert-danger mt-4" role="alert">
                    <h5 class="alert-heading">
                        <i class="fa fa-exclamation-triangle"></i> {{ 'pteroca.crud.plugin.plugin_error'|trans }}
                    </h5>
                    <p class="mb-0">{{ plugin.faultReason }}</p>
                </div>
            {% endif %}

            {% if plugin.state.value == 'update_pending' %}
                <div class="alert alert-warning mt-4" role="alert">
                    <h5 class="alert-heading">
                        <i class="fa fa-info-circle"></i> {{ 'pteroca.crud.plugin.update_available'|trans }}
                    </h5>
                    <p class="mb-0">{{ 'pteroca.crud.plugin.update_available_message'|trans }}</p>
                </div>
            {% endif %}
        </div>
    </div>

    {# Dependencies Section #}
    {% if dependencies|length > 0 %}
        <div class="card border-0 shadow-sm rounded-3 mt-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fa fa-link"></i> {{ 'pteroca.crud.plugin.dependencies'|trans }}
                </h5>
            </div>
            <div class="card-body">
                {% if hasCircularDependency %}
                    <div class="alert alert-danger">
                        <i class="fa fa-exclamation-circle"></i>
                        <strong>{{ 'pteroca.crud.plugin.circular_dependency_detected'|trans }}</strong><br>
                        {{ circularDependencyPath|join(' â†’ ') }}
                    </div>
                {% endif %}

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>{{ 'pteroca.crud.plugin.required_plugin'|trans }}</th>
                            <th>{{ 'pteroca.crud.plugin.version_constraint'|trans }}</th>
                            <th>{{ 'pteroca.crud.plugin.installed_version'|trans }}</th>
                            <th>{{ 'pteroca.crud.plugin.status'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for dep in dependencies %}
                            <tr>
                                <td>
                                    <code>{{ dep.name }}</code>
                                    {% if dep.plugin %}
                                        <br><small class="text-muted">{{ dep.plugin.displayName }}</small>
                                    {% endif %}
                                </td>
                                <td><span class="badge bg-secondary">{{ dep.constraint }}</span></td>
                                <td>
                                    {% if dep.installed %}
                                        <span class="badge bg-info">{{ dep.version }}</span>
                                    {% else %}
                                        <span class="badge bg-danger">{{ 'pteroca.crud.plugin.not_installed'|trans }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if not dep.installed %}
                                        <span class="badge bg-danger">
                                            <i class="fa fa-times"></i> {{ 'pteroca.crud.plugin.missing'|trans }}
                                        </span>
                                    {% elseif not dep.enabled %}
                                        <span class="badge bg-warning">
                                            <i class="fa fa-pause"></i> {{ 'pteroca.crud.plugin.not_enabled'|trans }}
                                        </span>
                                    {% elseif not dep.compatible %}
                                        <span class="badge bg-danger">
                                            <i class="fa fa-exclamation-triangle"></i> {{ 'pteroca.crud.plugin.incompatible_version'|trans }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-success">
                                            <i class="fa fa-check"></i> {{ 'pteroca.crud.plugin.satisfied'|trans }}
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

    {# Health Status Section #}
    {% if healthCheckResult is not null %}
        <div class="card border-0 shadow-sm rounded-3 mt-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fa fa-heartbeat {{ healthCheckResult.healthy ? 'text-success' : 'text-danger' }}"></i>
                    {{ 'pteroca.plugin.health.health_status'|trans }}
                    <span class="badge {{ healthCheckResult.healthy ? 'bg-success' : 'bg-danger' }} ms-2">
                        {{ healthCheckResult.healthPercentage|number_format(0) }}%
                    </span>
                </h5>
            </div>
            <div class="card-body">
                {% if healthCheckResult.healthy %}
                    <div class="alert alert-success mb-0">
                        <i class="fa fa-check-circle"></i> {{ 'pteroca.plugin.health.all_checks_passed'|trans }}
                    </div>
                {% else %}
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>{{ 'pteroca.plugin.health.check'|trans }}</th>
                                <th>{{ 'pteroca.plugin.health.status'|trans }}</th>
                                <th>{{ 'pteroca.plugin.health.error_details'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for checkName, passed in healthCheckResult.checks %}
                                <tr>
                                    <td>
                                        {% if checkName == 'files_integrity' %}
                                            {{ 'pteroca.plugin.health.files_integrity'|trans }}
                                        {% elseif checkName == 'dependencies' %}
                                            {{ 'pteroca.plugin.health.dependencies'|trans }}
                                        {% elseif checkName == 'configuration' %}
                                            {{ 'pteroca.plugin.health.configuration'|trans }}
                                        {% elseif checkName == 'service_registration' %}
                                            {{ 'pteroca.plugin.health.service_registration'|trans }}
                                        {% else %}
                                            {{ checkName }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if passed %}
                                            <span class="badge bg-success">
                                                <i class="fa fa-check"></i> {{ 'pteroca.plugin.health.passed'|trans }}
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger">
                                                <i class="fa fa-times"></i> {{ 'pteroca.plugin.health.failed'|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if not passed and healthCheckResult.errors[checkName] is defined %}
                                            <small class="text-danger">{{ healthCheckResult.errors[checkName] }}</small>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    {% endif %}

    {# Security Status Section #}
    <div class="card border-0 shadow-sm rounded-3 mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fa fa-shield-alt {{ securityIssues|length > 0 ? 'text-danger' : 'text-success' }}"></i>
                {{ 'pteroca.plugin.security.security_status'|trans }}
                {% if securityIssues|length > 0 %}
                    <span class="badge bg-danger ms-2">
                        {{ securityIssues|length }} {{ 'pteroca.plugin.security.issues'|trans }}
                    </span>
                {% else %}
                    <span class="badge bg-success ms-2">
                        <i class="fa fa-check"></i> OK
                    </span>
                {% endif %}
            </h5>
        </div>
        <div class="card-body">
            {% if securityIssues|length == 0 %}
                <div class="alert alert-success mb-0">
                    <i class="fa fa-check-circle"></i> {{ 'pteroca.plugin.security.all_clear'|trans }}
                </div>
            {% else %}
                <div class="mb-3">
                    <strong>{{ 'pteroca.plugin.security.total_issues_found'|trans }}:</strong> {{ securityIssues|length }}
                </div>
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>{{ 'pteroca.plugin.security.severity'|trans }}</th>
                            <th>{{ 'pteroca.plugin.security.type'|trans }}</th>
                            <th>{{ 'pteroca.plugin.security.file'|trans }}</th>
                            <th>{{ 'pteroca.plugin.security.line'|trans }}</th>
                            <th>{{ 'pteroca.plugin.security.message'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for issue in securityIssues %}
                            <tr>
                                <td>
                                    {% if issue.severity == 'critical' %}
                                        <span class="badge bg-danger">
                                            <i class="fa fa-exclamation-circle"></i> {{ 'pteroca.plugin.security.critical'|trans|upper }}
                                        </span>
                                    {% elseif issue.severity == 'high' %}
                                        <span class="badge bg-warning">
                                            <i class="fa fa-exclamation-triangle"></i> {{ 'pteroca.plugin.security.high'|trans|upper }}
                                        </span>
                                    {% elseif issue.severity == 'medium' %}
                                        <span class="badge bg-info">{{ 'pteroca.plugin.security.medium'|trans|upper }}</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ 'pteroca.plugin.security.low'|trans|upper }}</span>
                                    {% endif %}
                                </td>
                                <td><code>{{ issue.type }}</code></td>
                                <td>
                                    {% if issue.file is defined %}
                                        <small>{{ issue.file }}</small>
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>
                                    {% if issue.line is defined %}
                                        {{ issue.line }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>{{ issue.message }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>

    {# Dependents Section #}
    {% if dependents|length > 0 %}
        <div class="card border-0 shadow-sm rounded-3 border-warning mt-4">
            <div class="card-header bg-warning bg-opacity-10">
                <h5 class="mb-0">
                    <i class="fa fa-exclamation-triangle text-warning"></i> {{ 'pteroca.crud.plugin.dependent_plugins'|trans }}
                </h5>
                <small class="text-muted">
                    {{ 'pteroca.crud.plugin.dependents_warning'|trans }}
                </small>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>{{ 'pteroca.crud.plugin.plugin_name'|trans }}</th>
                            <th>{{ 'pteroca.crud.plugin.version_constraint'|trans }}</th>
                            <th>{{ 'pteroca.crud.plugin.current_state'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for dependent in dependents %}
                            <tr>
                                <td>
                                    <strong>{{ dependent.displayName }}</strong><br>
                                    <small class="text-muted"><code>{{ dependent.name }}</code></small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        {{ dependent.requires[plugin.name] ?? '*' }}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-{{ dependent.state.badgeClass }}">
                                        {{ dependent.state.label|trans }}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}
